<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" rel="stylesheet">
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
  <a class="navbar-brand" href="/">Bookers</a>
  <ul class="navbar-nav navbar-right">

    <% if user_signed_in? %>
 <li><%= link_to "Home", user_path(current_user.id), class: "fas fa-home text-light pr-4"  %>
      </li>
   <li><%= link_to 'Users', users_path, class: "fas fa-users text-light pr-4" %>
    </li>
 <li><%= link_to 'Books', books_path, class: "fas fa-book-open text-light pr-4" %>
    </li>
 <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt text-light pr-4" %>
      </li>
    <% else %>
    <li><%= link_to "Home", root_path, class: "fas fa-home text-light pr-4" %>
      </li>
    <li><%= link_to "About", home_about_path, class: "fas fa-link text-light pr-4" %>
    </li>
     <li><%= link_to "sign up", new_user_registration_path, class: "fas fa-user-plus text-light pr-4" %>
      </li>
      <li><%= link_to "login", new_user_session_path, class: "fas fa-sign-in-alt text-light pr-4" %>
      </li>
    <% end %>
    </ul>
    </div>
    </nav>

    <%= yield %>

<footer>
<div class="container">
<div class="row">

<div class="col-md-3 mt-5 offset-5">

    <p>CopyRight Infratop.inc</p>
    </div>
    </div>
    </div>
</footer>
  </body>


</html>
